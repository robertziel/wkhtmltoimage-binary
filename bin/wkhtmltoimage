#!/usr/bin/env ruby

arch = case RUBY_PLATFORM
       when /64.*linux/
         'amd64'
       when /linux/
         'i386'
       when /64.*darwin/
         'darwin-x64'
       when /darwin/
         'darwin-x86'
       else
         'amd64'
       end

args = $*.map { |x| x.include?(' ') ? "'" + x + "'" : x }
cmd = File.expand_path "#{File.dirname(__FILE__)}/../libexec/wkhtmltoimage-#{arch}"

exec "#{cmd} #{args.join(' ')}"
